@model CrowdFarming.Pages_Investments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Investment[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Investment[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Investment[0].UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Investment[0].Investor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Investment[0].Project)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Investment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Investor.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
